<h1>Books</h1>

<table>

  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>


  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book.id)%>
        <%= link_to "Edit", edit_book_path(book.id) %>
        <%= link_to "Destroy", book_path(book.id), method: :delete%>
      </td>
    </tr>
  <% end %>


</table>

<h1>New book</h1>

<%= form_with(model: Book, url: books_path, method: :POST) do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <div class="submit">
  <%= f.submit "Create Book" %>
  </div>

<% end %>

