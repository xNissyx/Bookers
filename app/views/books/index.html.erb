<%= form_with(model: @book, url: books_path, method: :POST) do |f| %>

  <p>Title</p>
  <div class="field"><%= f.text_field :title %></div>

  <p>Body</p>
  <div class="field"><%= f.text_area :body %></div>

  <div class="field">
  <%= f.submit "Create Book" %>
  </div>

<% end %>

