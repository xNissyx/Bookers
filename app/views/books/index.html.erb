
<h1>Books</h1>

<table>

  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>


  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td class="body"><%= book.body %></td>

        <td><%= link_to "Show", book_path(book.id)%></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete%></td>

    </tr>
  <% end %>


</table>


<h2>New book</h2>

